Hi <%= @user.name %>
<% if @user.fb_id.present? %>
  <div id="fb-root"></div>
  <a href="#" id="invite_fb_friends">Invite your friends</a>
  <script src="http://connect.facebook.net/en_US/all.js"></script>
  <script>
    $(function(){
      $("a#invite_fb_friends").click(function(){
        FB.init({
          appId: '625181867552254',
          status: true,
          cookie: true,
          xfbml: true
        });

        FB.ui({method: 'apprequests',
          message: '<%= @user.name %> has invite you'
        });
      });
    });
  </script>
<% end %>